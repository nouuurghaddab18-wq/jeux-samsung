  <script>
    const jeux = [
      {
        type: 'quiz',
        questions: [
          {
            question: "En quelle annÃ©e Samsung a Ã©tÃ© fondÃ©e ?",
            options: ["1938", "1948", "1958", "1968"],
            answer: "1938"
          },
          {
            question: "Quel est le slogan actuel de Samsung ?",
            options: ["Inspire the World", "Do What You Canâ€™t", "Think Different", "Impossible Is Nothing"],
            answer: "Do What You Canâ€™t"
          },
          {
            question: "Samsung est originaire de quel pays ?",
            options: ["Japon", "Chine", "CorÃ©e du Sud", "USA"],
            answer: "CorÃ©e du Sud"
          }
        ]
      },
      {
        type: 'vrai-faux',
        questions: [
          {
            statement: "Samsung produit des tÃ©lÃ©visions.",
            answer: true
          },
          {
            statement: "Samsung est une marque franÃ§aise.",
            answer: false
          },
          {
            statement: "Samsung fabrique aussi des Ã©lectromÃ©nagers.",
            answer: true
          }
        ]
      },
      {
        type: 'devinette',
        questions: [
          {
            riddle: "Je suis un appareil que tu tiens dans ta main. Je suis intelligent et je tâ€™aide Ã  appeler, photographier, et naviguer. Qui suisâ€‘je ?",
            answer: "smartphone"
          }
        ]
      }
    ];

    let currentGameIndex = 0;
    let currentQuestionIndex = 0;

    function startGame() {
      document.getElementById('start-screen').classList.add('hidden');
      document.getElementById('game-screen').classList.remove('hidden');
      showNextQuestion();
    }

    function showNextQuestion() {
      const game = jeux[currentGameIndex];
      const qBox = document.getElementById('question-box');
      const bBox = document.getElementById('buttons-box');
      qBox.innerHTML = '';
      bBox.innerHTML = '';

      if (currentQuestionIndex >= game.questions.length) {
        // fin de ce jeu, passe au jeu suivant
        currentGameIndex++;
        currentQuestionIndex = 0;
        if (currentGameIndex >= jeux.length) {
          endGame();
          return;
        }
        showNextQuestion();
        return;
      }

      const q = game.questions[currentQuestionIndex];
      if (game.type === 'quiz') {
        qBox.innerText = q.question;
        q.options.forEach(opt => {
          const btn = document.createElement('button');
          btn.classList.add('btn');
          btn.innerText = opt;
          btn.onclick = () => {
            if (opt === q.answer) {
              alert("Bonne rÃ©ponse !");
            } else {
              alert("Mauvaise rÃ©ponse. La bonne rÃ©ponse est : " + q.answer);
            }
            currentQuestionIndex++;
            showNextQuestion();
          };
          bBox.appendChild(btn);
        });
      } else if (game.type === 'vrai-faux') {
        qBox.innerText = q.statement;
        ['Vrai', 'Faux'].forEach(opt => {
          const btn = document.createElement('button');
          btn.classList.add('btn');
          btn.innerText = opt;
          btn.onclick = () => {
            const userAns = (opt === 'Vrai');
            if (userAns === q.answer) {
              alert("âœ”ï¸ Correct !");
            } else {
              alert("âŒ Incorrect !");
            }
            currentQuestionIndex++;
            showNextQuestion();
          };
          bBox.appendChild(btn);
        });
      } else if (game.type === 'devinette') {
        qBox.innerText = q.riddle;
        const input = document.createElement('input');
        input.type = 'text';
        input.placeholder = 'Votre rÃ©ponse...';
        bBox.appendChild(input);
        const btn = document.createElement('button');
        btn.classList.add('btn');
        btn.innerText = 'Valider';
        btn.onclick = () => {
          const ans = input.value.trim().toLowerCase();
          if (ans === q.answer.toLowerCase()) {
            alert("Bravo !");
          } else {
            alert("Non, la rÃ©ponse est : " + q.answer);
          }
          currentQuestionIndex++;
          showNextQuestion();
        };
        bBox.appendChild(btn);
      }
    }

    function endGame() {
      document.getElementById('game-screen').classList.add('hidden');
      document.getElementById('end-screen').classList.remove('hidden');
    }
  </script>
